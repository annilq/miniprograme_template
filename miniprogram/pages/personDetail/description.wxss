/* pages/personal/pages/my_orders/description_of_illness.wxss */

page {
  background-color: #fff;
}

.items {
  font-size: 28rpx;
  padding: 0 30rpx;
}

.item {
  padding: 10rpx 0;
  border-bottom: solid 1px #efefef;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.content {
  margin: 0 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
  padding: 30rpx 30rpx 30rpx 55rpx;
  position: relative;
}

.content::after {
  content: '';
  position: absolute;
  display: block;
  border-radius: 100%;
  width: 12rpx;
  height: 12rpx;
  background: #e57b7b;
  left: 28rpx;
  top: 50rpx;
}

.item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.time {
  font-size: 24rpx;
  color: #787878;
  line-height: 60rpx;
  display: block;
  flex: 1;
}

.top-info {
  display: flex;
  align-items: center;
}

.top-info button {
  width: 75px;
  font-size: 24rpx;
}

.images {
  margin-top: 10rpx;
  margin: 0 30rpx;

}

.images image {
  width: 210rpx;
  height: 210rpx;
  margin-right: 20rpx;
}

.btn {
  background: #fff;
  color: #916e56;
  font-size: 28rpx;
  line-height: 80rpx;
  margin: 50rpx 30rpx;
  font-weight: bold;
  border-radius: 0;
}

.btn::after {
  border-radius: 8rpx;
  border-color: #c8b7ab;
}

/* 新页面样式 */
.nav {
  display: flex;
  align-items: center;
  height: 90rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
  color: #666666;
  font-size: 33rpx;
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  background: #fff;
  z-index: 3;
}

.nav-height {
  height: 90rpx;
}

.nav navigator,
.nav view {
  width: 100%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  color: #666;
}

.nav navigator.active {
  color: #333;
}

.nav navigator.active::after {
  content: '';
  position: absolute;
  left: 50%;
  line-height: 90rpx;
  transform: translateX(-50%);
  bottom: 0;
  width: 35rpx;
  height: 5rpx;
  background: #916e56;
  display: block;
}

.weight {
  color: #999999;
  font-size: 28rpx;
}

/* 问诊表 */
.today-content {
  padding: 30rpx 30rpx 0;
  overflow: hidden;
  background-color: #f5f5f5;
}

/* 标题 */

.today-radio-title {
  margin: 35rpx 0;
}

.today-title-t {
  color: #1e1e1e;
  font-size: 36rpx;
}

.today-title-time {
  color: #787878;
  font-size: 24rpx;
}

/* 选项 */

.today-radio-item {
  background: #fff;
  border-radius: 15rpx;
  padding: 40rpx 30rpx 0;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.today-radio-item-t {
  color: #3c3c3c;
  font-size: 30rpx;
}

.today-radio-item-t text {
  color: #d93433;
  margin-right: 5rpx;
}

.radio-group {
  overflow: hidden;
  margin: 20rpx 0 20rpx -24%;
  width: 140%;
}

.radio {
  color: #787878;
  float: left;
  font-size: 36rpx;
  transform: scale(0.65);
  padding: 8rpx 0;
  width: 100%;
}

.radio-input {
  color: #1e1e1e;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: 1px solid #f0f0f0;
  height: 82rpx;
  padding: 0 25rpx;
  margin-bottom: 40rpx;
}

.radio-submit {
  color: #fff;
  font-size: 30rpx;
  height: 90rpx;
  background: #916e56;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 0;
  border-radius: 0;
  line-height: 90rpx;
  z-index: 2;
}

.textarea {
  border-radius: 10rpx;
  border: 1rpx solid #f0f0f0;
  padding: 20rpx;
  height: 200rpx;
  box-sizing: border-box;
  margin: 40rpx 0;
  width: auto;
}

/* 健康调查表 */

.radio-group2 {
  margin: 20rpx 0 20rpx -9%;
  width: 120%;
}

.radio-group2 .radio {
  width: 50%;
}

.submit-height {
  height: 110rpx;
}

