/* components/plugins/nav/test.wxss */
.custom_nav {
    width: 100%;
    background:  var(--primary-color);
    position: relative;
    z-index: 99999;
}

.custom_nav_bar {
    position: relative;
    z-index: 9;
}

 .nav_title {
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    max-width: 360rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 1;
}